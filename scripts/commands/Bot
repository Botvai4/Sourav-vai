module.exports.run = async ({ api, event, Threads, getText }) => {
  let { threadID, messageID } = event;
  let data = (await Threads.getData(threadID)).data;
  if (typeof data["Ã°Å¸Â¥Âµ"] == "undefined" || data["Ã°Å¸Â¥Âµ"] == true) data["Ã°Å¸â€“Â¤"] = false;
  else data["Ã°Å¸Â¥Âµ"] = true;
  await Threads.setData(threadID, {
    data
  });
  global.data.threadData.set(threadID, data);
  api.sendMessage(`${(data["Ã°Å¸Â¥Âµ"] == false) ? getText("off") : getText("on")} ${getText("successText")}`, threadID, messageID);
};
